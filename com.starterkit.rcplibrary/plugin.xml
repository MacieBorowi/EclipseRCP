<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.starterkit.rcplibrary.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="com.starterkit.rcplibrary.views.View"
            id="com.starterkit.rcplibrary.view">
      </view>
      <view
            class="com.starterkit.rcplibrary.views.LibraryViewPart"
            id="com.starterkit.rcplibrary.libraryview"
            name="Library"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            class="com.starterkit.rcplibrary.views.MenuViewPart"
            id="com.starterkit.rcplibrary.menuview"
            name="Menu"
            restorable="true">
      </view>
      <view
            class="com.starterkit.rcplibrary.views.DetailViewPart"
            id="com.starterkit.rcplibrary.detailview"
            name="Details"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Basics"
            class="com.starterkit.rcplibrary.perspective.Perspective"
            id="com.starterkit.rcplibrary.perspective">
      </perspective>
      <perspective
            class="com.starterkit.rcplibrary.perspective.LibraryPerspectivFactory"
            id="com.starterkit.rcplibrary.libraryperspective"
            name="Library">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.starterkit.rcplibrary.libraryperspective">
         <view
               closeable="false"
               id="com.starterkit.rcplibrary.libraryview"
               minimized="false"
               relationship="right"
               relative="com.starterkit.rcplibrary.view">
         </view>
         <view
               closeable="false"
               id="com.starterkit.rcplibrary.menuview"
               minimized="false"
               ratio="0.12"
               relationship="left"
               relative="com.starterkit.rcplibrary.menuview">
         </view>
         <view
               id="com.starterkit.rcplibrary.detailview"
               minimized="false"
               ratio="0.7"
               relationship="bottom"
               relative="com.starterkit.rcplibrary.libraryview">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="com.starterkit.rcplibrary.perspective">
         <view
               id="com.starterkit.rcplibrary.view"
               minimized="false"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               standalone="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.starterkit.rcplibrary.application"
            name="rcpLibrary">
         <property
               name="appName"
               value="rcpLibrary">
         </property>
      </product>
   </extension>
  

</plugin>
